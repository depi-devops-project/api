{
	"name": "express-ts",
	"version": "1.0.0",
	"description": "Express with TypeScript",
	"main": "src/app.ts",
	"scripts": {
		"start": "tsx src/app.ts",
		"dev": "nodemon -e ts --exec tsx src/app.ts",
		"deploy": "pm2 restart \"yarn start\" --name \"depi\" && pm2 save",
		"pm2:start": "sudo pm2 start \"yarn start\" --name \"depi\"",
		"pm2:restart": "sudo pm2 restart \"depi\"",
		"postinstall": "rm -rf package-lock.json"
	},
	"dependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/express": "^5.0.0",
		"@types/node": "^22.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.0",
		"pg": "^8.13.0",
		"pm2": "^5.4.2",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.20"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17"
	}
}
